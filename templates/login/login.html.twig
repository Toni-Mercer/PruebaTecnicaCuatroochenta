{% extends 'base.html.twig' %}

{% block head %}
    {% include('head.html.twig') %}
{% endblock %}

{% block stylesheets %}
    {% include('stylesheets.html.twig') %}
{% endblock %}


{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4 py-4">
            <p class="h3 text-center pb-4">Login</p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            <p class="text-muted">Accede para ver las lecturas.</p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            {% if error %}
                <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            <form action="{{ path('app_login') }}" method="post">
                <div class="row">
                    <div class="col-12 py-2">
                        <label class="form-label" for="username">Email:</label>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="col-12 py-2">
                        <label class="form-label" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="_password">
                    </div>
                    <div class="col-12 py-2 pt-4">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <input type="hidden" name="_target_path" value="{{ path('app_home') }}">
                        <div class="d-grid gap-2 pt-4">
                            <button class="btn btn-primary" type="submit">login</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4 py-4">
            <p class="text-muted">No estás registrado? Crea tu usuario pulsando <a href="{{ path('app_register') }}">aquí.</a></p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% include('javascripts.html.twig') %}
{% endblock %}
